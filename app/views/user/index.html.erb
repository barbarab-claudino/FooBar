<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div id="header">

	<span id="logo"><%= image_tag("logo.png") %></span>	
	<h1>FooBar - Online Store</h1>
	<span id="links"><%= link_to 'Cliente', stores_path %></span> <br/>
	<span id="links"><%= link_to 'Administrador', controls_path %></span>
</div>
<div id="conteudo">
	<div id="menu">
		<ul>
		<% @categories.each do |categoria| %>
			<li><%= link_to categoria.name, :controller => "products", :action => "show", :id => categoria.id %></li>
		<% end %>
		</ul>
	</div>
	<div id="destaque">
		<% @products.each do |p| %>
			<% @categories.each do |c| %>
				<% if p.category.name == c.name %>
					<%= image_tag(p.photo.first.image_url)%>
				<%end%>
			<%end%>
		<%end%> 
 </div>
</div>
