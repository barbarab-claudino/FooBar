<% @product.each do |produto|%>

<p>
  <b>Name:</b>
  <%= produto.name %>
</p>

<p>
  <b>Photo:</b>
  <%=image_tag( produto.main_photo) %>
</p>

<p>
  <b>Description:</b>
  <%= produto.description %>
</p>
<div id="photos">
  <% for photo in produto.photo %>
    <div class="photo">
      <%= image_tag photo.image_url.to_s if photo.image? %>
    </div>
  <% end %>
  <div class="clear"></div>
</div>

<p>
  <b>Price:</b>
  <%= number_to_currency(produto.price) %> <%= button_to 'Add to Cart', line_items_path(product_id: produto) %>
</p>

<%= link_to 'Voltar', user_path %> 

<% end %>
