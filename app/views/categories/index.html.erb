<h1>Lista de categorias</h1>
<div class="conteudo">
<%= link_to 'Voltar para Admin', controls_path %> 

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
    <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Você tem certeza? Caso haja um produto associado, a ação será anulada' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path %> | 
<%= link_to 'Home', user_path %>
</div>
